datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id @default(cuid(2))

    givenName  String @default("") // first name
    familyName String @default("") // last name

    emailAddress String @unique
    password     String

    emailVerified                 Boolean   @default(false)
    emailVerifiedAt               DateTime?
    emailVerificationToken        String?   @unique
    emailVerificationTokenExpires DateTime?

    created DateTime @default(now())
    updated DateTime @updatedAt

    Dataset Dataset[]

    @@index([emailAddress])
}

model Dataset {
    id Int @id @default(autoincrement())

    title       String
    description String

    imageUrl String

    publishedAt DateTime

    user   User   @relation(fields: [userId], references: [id])
    userId String

    doi String

    publisher     String
    publisherYear String

    subjects String[]
    language String?

    randomInt Int @default(0) // a field to touch when data in a related table is updated - For sorting by last updated

    created DateTime @default(now())
    updated DateTime @updatedAt

    Citation  Citation[]
    FujiScore FujiScore[]
}

model Citation {
    id String @id @default(cuid(2))

    dataset   Dataset @relation(fields: [datasetId], references: [id])
    datasetId Int

    doi       String
    journal   String? // Check if nullable in the MDC record
    publisher String? // Check if nullable in the MDC record
    source    String? // Check if nullable in the MDC record

    citedDate DateTime @default(now()) // publishedDate in the MDC record

    created DateTime @default(now())
    updated DateTime @updatedAt
}

model FujiScore {
    id String @id @default(cuid(2))

    dataset   Dataset @relation(fields: [datasetId], references: [id])
    datasetId Int

    score Int @default(0) // 0-100

    // The date and time the score was calculated
    // We want to replace older daily/interval scores with monthly scores at some point
    calculatedAt DateTime @default(now())

    created DateTime @default(now())
    updated DateTime @updatedAt
}
