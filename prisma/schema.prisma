datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id @default(cuid(2))

    givenName  String @default("") // first name
    familyName String @default("") // last name

    emailAddress String @unique
    password     String

    emailVerified                 Boolean   @default(false)
    emailVerifiedAt               DateTime?
    emailVerificationToken        String?   @unique
    emailVerificationTokenExpires DateTime?

    created DateTime @default(now())
    updated DateTime @updatedAt

    userDatasets UserDataset[]

    @@index([emailAddress])
}

model Dataset {
    id Int @id @default(autoincrement())

    title       String
    description String

    imageUrl String

    publishedAt DateTime

    authors Json @default("[]") // [{ givenName: String, familyName: String, affiliation: String[], nameType: String, nameIdentifiers: { nameIdentifier : String, nameIdentifierScheme : String }[] }]

    doi String

    publisher     String
    publisherYear String

    subjects String[]
    language String?

    randomInt Int @default(0) // a field to touch when data in a related table is updated - For sorting by last updated

    created DateTime @default(now())
    updated DateTime @updatedAt

    Citation  Citation[]
    FujiScore FujiScore[]

    datasetClaims UserDataset[]
}

model UserDataset {
    user   User   @relation(fields: [userId], references: [id])
    userId String

    dataset   Dataset @relation(fields: [datasetId], references: [id])
    datasetId Int

    created DateTime @default(now())
    updated DateTime @updatedAt

    @@id([userId, datasetId])
}

model Citation {
    id String @id @default(cuid(2))

    dataset   Dataset @relation(fields: [datasetId], references: [id])
    datasetId Int

    doi String

    citedDate DateTime

    created DateTime @default(now())
    updated DateTime @updatedAt
}

model FujiScore {
    dataset   Dataset @relation(fields: [datasetId], references: [id])
    datasetId Int

    score Int @default(0) // 0-100

    created DateTime @default(now())
    updated DateTime @updatedAt

    @@id([datasetId])
}
